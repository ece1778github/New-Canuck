<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:orientation="vertical"
    tools:context=".QuizGameActivity" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_weight="0.01" >

        <ProgressBar
            android:id="@+id/timeBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.2"
        android:background="@drawable/quiz_background" >

        <TextView
            android:id="@+id/questionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:text="Question 1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/questionDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/questionTitle"
            android:layout_marginLeft="15dp"
            android:text="What does tonnie mean in Canada?"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/questionsInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="16dp"
            android:text="12:4"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/questionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="15dp"
            android:text="Life"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonSkip"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/questionsInfo"
            android:layout_marginBottom="18dp"
            android:background="@drawable/skip" />

        <Button
            android:id="@+id/button5050"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignBaseline="@+id/buttonSkip"
            android:layout_alignBottom="@+id/buttonSkip"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/buttonSkip"
            android:background="@drawable/fiftyfifty" />

        <Button
            android:id="@+id/buttonHint"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignBaseline="@+id/button5050"
            android:layout_alignBottom="@+id/button5050"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/button5050"
            android:background="@drawable/hint" />

        <TextView
            android:id="@+id/textViewScore" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:text="120"
            android:textColor="#5FB404"
            android:textSize="50sp"
            android:textStyle="italic"
            android:typeface="sans" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.12"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buttonAnswerA"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_margin="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="Answer A"
            android:textColor="#FFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonAnswerB"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_margin="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="Answer B"
            android:textColor="#FFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonAnswerC"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_margin="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="Answer C"
            android:textColor="#FFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonAnswerD"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_margin="1dp"
            android:layout_weight="0.25"
            android:background="@drawable/button"
            android:text="Answer D"
            android:textColor="#FFF"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>