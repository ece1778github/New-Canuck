<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background9"
    tools:context=".HomeActivity" >

    <Button
        android:id="@+id/btnTourMission"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button"
        android:text="Tour Mission"
        android:textColor="#FFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnQuizGame"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_alignLeft="@+id/btnTourMission"
        android:layout_below="@+id/btnTourMission"
        android:background="@drawable/button"
        android:text="Quiz Game"
        android:textColor="#FFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnRecord"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_alignLeft="@+id/btnQuizGame"
        android:layout_below="@+id/btnQuizGame"
        android:background="@drawable/button"
        android:text="Record"
        android:textColor="#FFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSetting"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_alignLeft="@+id/btnRecord"
        android:layout_below="@+id/btnRecord"
        android:background="@drawable/button"
        android:text="Setting"
        android:textColor="#FFF"
        android:textStyle="bold" />

</RelativeLayout>